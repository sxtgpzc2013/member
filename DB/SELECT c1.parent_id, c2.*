SELECT c1.parent_id, c2.*
FROM category AS c1

LEFT JOIN category AS c2 
ON c1.parentid=c2.uid 

WHERE c1.uid=100001


select distinct d.uid
from member as a inner join member as b on a.id=b.pid or a.id=b.id
    inner join 表结构如下 c on b.id=c.pid or b.id=c.id
    inner join 表结构如下 c on b.id=d.pid or c.id=d.id
where a.id=1